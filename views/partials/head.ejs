<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Police-Academy-ADV</title>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <!-- Tailwind CDN for prototype -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-blue-100 min-h-screen">
    <div class="max-w-6xl mx-auto p-4">
      <header class="flex items-center gap-4 mb-6">
        <img src="/logo.png" alt="logo" class="w-16 h-16 rounded-full bg-white p-2 shadow" />
        <div>
          <h1 class="text-2xl font-bold text-blue-900">Police-Academy-ADV</h1>
          <% if (currentUser) { %>
            <p class="text-sm text-blue-700">Connecté : <%= currentUser.matricule %> — <%= currentUser.nom %> <%= currentUser.prenom %> (<%= currentUser.role %>)</p>
          <% } %>
        </div>
      </header>