<%- include('partials/head') %>
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Connexion</h2>
  <% if (error) { %>
    <div class="bg-red-100 text-red-800 p-2 rounded mb-3"><%= error %></div>
  <% } %>
  <form method="post" action="/login" class="space-y-3">
    <div>
      <label class="block text-sm">Matricule</label>
      <input name="matricule" class="w-full border p-2 rounded" required />
    </div>
    <div>
      <label class="block text-sm">Mot de passe</label>
      <input name="password" type="password" class="w-full border p-2 rounded" required />
    </div>
    <div class="flex items-center justify-between">
      <button class="bg-blue-600 text-white px-4 py-2 rounded">Se connecter</button>
    </div>
  </form>
</div>
<%- include('partials/footer') %>