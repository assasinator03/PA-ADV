<%- include('partials/head') %>
<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Changer le mot de passe</h2>
  <% if (error) { %>
    <div class="bg-red-100 text-red-800 p-2 rounded mb-3"><%= error %></div>
  <% } %>
  <form method="post" action="/change-password" class="space-y-3">
    <div><label class="block text-sm">Nouveau mot de passe</label><input name="password" type="password" class="w-full border p-2 rounded" required /></div>
    <div><label class="block text-sm">Confirmer</label><input name="password2" type="password" class="w-full border p-2 rounded" required /></div>
    <div><button class="bg-green-600 text-white px-4 py-2 rounded">Valider</button></div>
  </form>
</div>
<%- include('partials/footer') %>